<header role="banner" id="global-header" class="with-proposition">
  <div class="header-wrapper">
      <div class="header-global">
          <div class="header-logo">
              <a href="/" title="Go to the homepage" id="logo" class="content hmppslogo">
                  <img class="logo-img" src="/public/images/logo.svg" width="41" height="35" alt=""/>
                  <span>Offloc Server</span>
              </a>
          </div>
      </div>
      <% if (locals.user) { %>
      <div class="header-user">
        <strong class="header-username"><%= locals.user.username %></strong>
        <% if (locals.user.accountType === locals.constants.ADMIN_ACCOUNT) {%>
          <a class="nav-link" href="/admin">Dashboard</a>
        <% } %>
        <a class="nav-link" href="/change-password">Change password</a>
      </div>
      <% } %>
  </div>
</header>
